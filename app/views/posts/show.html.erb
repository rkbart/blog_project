<h1 class="blog-title"><%= @post.title %></h1>
<p class="created-at"><%= @post.created_at.in_time_zone(Time.zone.name).strftime("%m-%d-%y %I:%M") %></p>
<p class="blog-text"><%= @post.body %></p>

<h2>Comments</h2>
<div class="comments-div">
  <% @post.comments.each do |comment| %>
    <p> <i>"<%= comment.body %>" </i>-<strong><%= comment.name %></strong> 
    <span style="font-size: 12px"> <%= comment.created_at.in_time_zone(Time.zone.name).strftime("%m-%d-%y %I:%M") %></span></p>
    <!-- <%= link_to "Delete comment", post_comment_path(@post, comment), 
    method: :delete, data: { confirm: "Are you sure?" }, class: "delete-comment-link" %> -->
  <% end %>
</div>

<%= render "comments/form", post: @post %>

<div class ="edit">
    <%= link_to "Edit Post", edit_post_path(@post) if user_signed_in? %>
    <%= link_to "Back", root_path %>
</div>