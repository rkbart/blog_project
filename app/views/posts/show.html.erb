<h1 class="blog-title"><%= @post.title %></h1>
<p class="blog-text"><%= @post.body %></p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p><strong><%= comment.name %>:</strong> <%= comment.body %></p>
  <%= link_to "Delete comment", post_comment_path(@post, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-comment-link" %>
<% end %>


<%= render "comments/form", post: @post %>

<div class ="edit">
    <%= link_to "Edit Post", edit_post_path(@post) if user_signed_in? %>
    <%= link_to "Back", root_path %>
</div>