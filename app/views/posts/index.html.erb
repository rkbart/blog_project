<div style="text-align: center; margin-top: 20px;">
    <h1>PostHub</h1>
    <h3>A simple blog project using Ruby on Rails</h3>
</div>

<% @posts.each do |post| %>
    <div class="post-index">
        <h2><%= link_to post.title, post %></h2>
        <p class="created-at"><%= post.created_at.in_time_zone(Time.zone.name).strftime("%m-%d-%y %I:%M") %></p>
        <p><%= post.body %></p>
    </div>
<% end %>

<%= link_to "Create New Post", new_post_path, class: "new-post-btn" %>