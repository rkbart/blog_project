<div class="comment-form-container">
  <h3>Add a Comment:</h3>

  <%= form_with model: [@post, Comment.new], local: true, class: "comment-form" do |form| %>
    <div class="form-group">
      <%= form.label :name, "Your Name", class: "form-label" %><br>
      <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :body, "Your Comment", class: "form-label" %><br>
      <%= form.text_area :body, class: "form-textarea" %>
    </div>

    <%= form.submit "Post Comment", class: "form-submit" %>
  <% end %>
</div>
